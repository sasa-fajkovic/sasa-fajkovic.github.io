---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Button from '~/components/ui/Button.astro';
import { Image } from 'astro:assets';
import sasaFajkovicImageBlack from 'src/assets/images/sasaFajkovicBlack.webp';


const metadata = {
  title: 'Sasa Fajkovic - tech lead',
};

---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero
    id="hero"
    title="Sasa Fajkovic"
    tagline="Tech lead"
  >
    <Fragment slot="subtitle">
      Technical leader with a product mindset.
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    id="about"
    columns={2}
    image={{
      src: sasaFajkovicImageBlack,
      alt: 'Colorful Image',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About me</h2>
      <p style="text-align: justify;">
        Welcome to my personal page. You can find out more about me, my professional journey, education and skills, or read some of my publications.
      </p>
      <br />
      <p style="text-align: justify;">
        Feel free to reach out over email if you have any questions or would like to discuss a potential collaboration.
      </p>
      <br />
      <p style="text-align: justify;">
        If you need a copy of my CV, you can download it by clicking the button below.
      </p>
      <br />
      <Button 
      variant='primary',
      text='PDF CV',
      href="/SasaFajkovicCV.pdf",
      target='_blank',
      class:list="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 mt-4"
      >

      </Button>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

    <!-- BlogLatestPost Widget **************** -->

    <BlogLatestPosts
    id="blog"
    title="My blog articles"
    information={`Learn more about my thoughts and experiences. You might find an interesting thing or two.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>

